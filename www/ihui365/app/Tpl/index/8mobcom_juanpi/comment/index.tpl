<!doctype html>
<html>
<head>
<include file="public:head" />
<css file="__STATIC__/css/ftxia/item.css" />
<css file="__STATIC__/css/ftxia/comment.css" />
</head>
<body>
<include file="public:header" />
<!--商品详细-->


<div class="mains">
	<div class="piece jiu_goods">
		<div class="piece_box">
			<div class="jiu_bd jiu_top fl">



			<div class="jiu_comment">
				<h3>TA们在说...</h3>
				<ul class="t_l">

				<volist name="list" id="val">
				<li class="t_f">
						<div class="time">
							<span class="t">{$val.add_time|frienddate}</span>
						</div>
						<div class="hd">
                            <a title="{$val.uname}" href="{:U('item/index',array('id'=>$val['id']))}">
							<img class="uinfo avt" src="{:avatar($val['uid'], '32')}" alt="{$val.uname}"></a>
						</div>
						<div class="tk">
							<div class="inf">
								<a title="{$val.uname}" href="{:U('item/index',array('id'=>$val['id']))}"><span class="username">{$val.uname}</span></a>
							</div>
							<p class="text">{$val.info}</p>
							<div class="pic">
								<div class="pic_s">
								<a class="p_s_img" target="_blank" href="{:U('item/index',array('id'=>$val['id']))}">
								<img alt="" src="{$val.pic_url}_80x80.jpg"></a>
								<p class="nowrap">
                                    <a href="{:U('item/index',array('id'=>$val['id']))}" target="_blank" class="blu">{$val.title} </a>
                                </p>
								<p><span>折扣价：{$val.coupon_price} 元</span><span class="org_p">原价：<b>{$val.price}</b>元</span></p>
								<p><span>开抢时间：{$val.coupon_start_time|frienddate}</span></p>
								<a class="go_buy" href="{:U('item/index',array('id'=>$val['id']))}" target="_blank">宝贝详情</a>
								</div>
							</div>
							<div class="tl">
								<a class="add_fav fav" href="javascript:;" style="display: none;"></a>
								<a class="cmt" href="{:U('item/index',array('id'=>$val['id']))}#pub_area" target="_blank">评论</a>
							</div>
						</div>
					</li>
					</volist>

				</ul>
				<div class="page"><div class="pageNav"> {$page_bar}</div></div> 			
				</div>





				

			</div>
			<div class="jiu_right fr">
				
<include file="public:rightloginbar" />
				
				
				<div class="exchange_info theysays worth_buy">
					<h3><span>值得买</span><a target="_blank" class="more" href="{:U('index/index')}">更多&gt;&gt;</a></h3>
					<div class="worth_buy_goods">
						<ul>
							<ftx:item type="zhi">
								<volist name="data" id="val" mod="2">
									<li <eq name="mod" value="1"> class="no"</eq>>
										<div class="goodsimg">
											<a href="{:U('item/index',array('id'=>$val['id']))}" target="_blank">
											<img src="{:attach(get_thumb($val['pic_url'], '_s'),'item')}" style="display: inline; "><span>￥{$val.coupon_price}</span></a>
										</div>
									</li>
								</volist>
							</ftx:item>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



<include file="public:footer" />
<script src="__STATIC__/js/comment.js"></script>
</body>
</html>
